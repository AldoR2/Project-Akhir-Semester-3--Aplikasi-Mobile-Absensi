<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:fitsSystemWindows="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bgmobile"
        android:layout_marginBottom="20dp"
        android:fitsSystemWindows="false"
        android:layout_alignParentTop="true">
    </LinearLayout>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="169dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:paddingTop="30dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_2"
        android:fontFamily="@font/poppinsbold"
        android:text="Selamat datang di SIM Online!"
        android:textSize="16dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:text="Silahkan login terlebih dahulu"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt2"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/gray"
        />

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Username"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Password"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            />
        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Lupa Password?"
            android:textColor="@color/primarycolor"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/primarycolor"
            android:text="Login"
            android:fontFamily="@font/poppinsbold"
            android:textSize="18sp"/>
    </LinearLayout>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear1"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Belum memiliki akun?"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear1"
            android:layout_marginLeft="247dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Register"
            android:textColor="@color/primarycolor"
            android:textSize="14dp" />
</RelativeLayout>