<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfilFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginTop="-10dp"
        android:src="@drawable/bg_home_wave" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/profil"
        android:background="@drawable/circle_shape" />

    <ImageView
        android:id="@+id/add_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:src="@drawable/addimage"
        android:background="@drawable/circle_shape2" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Izzul Islam Ramadhan"
        android:fontFamily="@font/poppinsregular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E41231215"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:layout_marginRight="50dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <!-- Menggunakan LinearLayout agar elemen bisa vertikal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/lb_prodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Studi"
                android:fontFamily="@font/poppinsregular"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/prodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teknik Informatika"
                android:textSize="10sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/lb_jurusan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:fontFamily="@font/poppinsregular"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="-10dp"/>

            <TextView
                android:id="@+id/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teknologi Informasi"
                android:textSize="10sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editprofil"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit Profile"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/primarycolor"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    android:padding="12dp" />
                <Button
                    android:id="@+id/view_profile"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Profile"
                    android:backgroundTint="@color/primarycolor"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    android:padding="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" >

            <TextView
                android:id="@+id/ket_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketentuan Layanan"
                android:fontFamily="@font/poppinsregular"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_service"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti Password"
                android:fontFamily="@font/poppinsregular"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_change_password"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/ganti_akun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganti Akun"
                android:fontFamily="@font/poppinsregular"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/ic_change_account"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"/>

            <Button
                android:id="@+id/btnlogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="15dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:padding="12dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>