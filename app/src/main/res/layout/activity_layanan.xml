<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayananActivity">

    <LinearLayout
        android:id="@+id/toplinear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_home_wave"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            app:tint="@color/white"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ketentuan Layanan"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bgmobile_transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/bgmobile_transparent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ketentuan Layanan"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="20sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Penerimaan Ketentuan"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dengan menggunakan aplikasi SIM Online Mahasiswa, Anda setuju untuk mematuhi dan tunduk pada semua syarat dan ketentuan yang ditetapkan dalam Ketentuan Layanan ini. Ketentuan ini dapat diperbarui sewaktu-waktu tanpa pemberitahuan sebelumnya."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Penggunaan Aplikasi"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplikasi ini hanya dapat digunakan oleh mahasiswa aktif di institusi pendidikan yang telah terdaftar. Pengguna bertanggung jawab untuk menjaga kerahasiaan akun dan kata sandi mereka. Segala aktivitas yang dilakukan melalui akun pengguna adalah tanggung jawab penuh pengguna."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Pengumpulan dan Penggunaan Data"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kami mengumpulkan data pribadi seperti nama, NIM, email, dan informasi akademik lainnya yang diperlukan untuk keperluan verifikasi dan manajemen identitas mahasiswa. Informasi ini akan digunakan sesuai dengan kebijakan privasi yang telah kami tetapkan, dan tidak akan dibagikan kepada pihak ketiga tanpa persetujuan pengguna."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Hak dan Kewajiban Pengguna"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengguna diwajibkan untuk:"
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  > Menyediakan informasi yang benar dan akurat."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  > Tidak menggunakan aplikasi ini untuk tindakan yang melanggar hukum atau merugikan pihak lain."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  > Melaporkan kepada pihak pengembang jika terdapat aktivitas mencurigakan atau pelanggaran terhadap keamanan akun."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Pembatasan Tanggung Jawab"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kami tidak bertanggung jawab atas:"
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  > Kesalahan atau ketidakakuratan informasi yang diunggah oleh pengguna."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  > Kegagalan sistem atau gangguan layanan yang berada di luar kendali kami."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  > Kehilangan atau kerusakan data akibat penggunaan aplikasi."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Pembaruan Layanan"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kami berhak untuk memperbarui, mengubah, atau menghentikan layanan aplikasi sewaktu-waktu, baik sebagian maupun seluruhnya, tanpa pemberitahuan terlebih dahulu."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Penghentian Akses"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kami berhak untuk menangguhkan atau menghentikan akses pengguna terhadap aplikasi jika ditemukan adanya pelanggaran terhadap ketentuan layanan ini atau tindakan yang merugikan pihak lain."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Hukum yang Berlaku"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ketentuan Layanan ini diatur dan ditafsirkan sesuai dengan hukum yang berlaku di wilayah Republik Indonesia. Setiap sengketa yang timbul akan diselesaikan melalui pengadilan yang berwenang di wilayah hukum tersebut."
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>