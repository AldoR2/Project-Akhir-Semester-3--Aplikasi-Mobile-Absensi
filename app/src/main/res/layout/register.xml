<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgmobile"
        android:layout_marginBottom="20dp"
        android:fitsSystemWindows="false"
        android:layout_alignParentTop="true">
    </LinearLayout>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/register" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_2"
        android:layout_marginLeft="150dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Register Akun"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:text="Silahkan isi data diri dibawah"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt2"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/gray"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/inputregister"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@id/txt2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nim"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="NIM"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/nama"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Nama"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"/>

            <AutoCompleteTextView
                android:id="@+id/prodi"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Program Studi"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_prodi"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"
                android:inputType="none"
                android:focusable="false"
                />

            <EditText
                android:id="@+id/semester"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Semester"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_prodi"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Email"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"/>

            <AutoCompleteTextView
                android:id="@+id/jeniskelamin"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Jenis Kelamin"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"
                android:inputType="none"
                android:focusable="false"
                />

            <EditText
                android:id="@+id/telNo"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Nomor Telepon"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"
                android:inputType="number"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Password"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Confirm Password"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/primarycolor"
        android:text="Submit"
        android:layout_below="@id/inputregister"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmit"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Sudah memiliki akun?"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmit"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Login"
        android:textColor="@color/primarycolor"
        android:textSize="14dp" />

</RelativeLayout>