<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/img_1"
        android:layout_marginTop="-320dp"
        />
    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Selamat datang di SIM Online!"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt6"
        android:text="Silahkan buat akun terlebih dahulu"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt7"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/gray"
        />
    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt7"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/nim"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan NIM"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan nama"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            />
        <EditText
            android:id="@+id/prodi"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan program studi"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_prodi"
            android:drawablePadding="12dp"
            />
        <EditText
            android:id="@+id/semester"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan semester"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_prodi"
            android:drawablePadding="12dp"
            />
        <EditText
            android:id="@+id/telNo"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan nomor telepon"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="12dp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan password"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            />
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/primarycolor"
            android:text="Submit" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear1"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Sudah memiliki akun?"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear1"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Login"
        android:textColor="@color/primarycolor"
        android:textSize="14dp" />


</RelativeLayout>